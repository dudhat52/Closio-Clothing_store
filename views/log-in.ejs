<div class="auth-container">
    <h2>Sign In</h2>
    <form class="auth-form">
        <div class="form-group">
            <label>Email</label>
            <input type="email" required>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" required>
        </div>
        <button type="submit" class="auth-button">Sign In</button>
    </form>
</div>  