<div class="product<% if (typeof homeCard !== 'undefined' && homeCard) { %> home-product-card<% } %>">
    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
    <div class="product-info">
        <h2><%= product.title %></h2>
        <% if(product.salePrice) { %>
            <p class="price">$<%= product.salePrice.toFixed(2) %> (<%= Math.round((1 - product.salePrice/product.price) * 100) %>% Off)</p>
        <% } else { %>
            <p class="price">$<%= product.price.toFixed(2) %></p>
        <% } %>
        <form action="/cart/add" method="POST" class="cart-form">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <% if (locals.user) { %>
                <button type="submit" class="add-to-cart-btn">Add to Cart</button>
            <% } else { %>
                <a href="/log-in" class="add-to-cart-btn" style="display: block; text-align: center; text-decoration: none;">Login to Add to Cart</a>
            <% } %>
        </form>
    </div>
</div>

<style>
.product {
    border: 1px solid #e1e1e1;
    border-radius: 8px;
    padding: 15px;
    margin: 10px;
    width: 300px;
    transition: transform 0.2s, box-shadow 0.2s;
    background: white;
}

.product:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.product img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 4px;
    margin-bottom: 10px;
}

.product-info {
    text-align: center;
}

.product-info h2 {
    font-size: 1.2em;
    margin: 10px 0;
    color: #333;
}

.price {
    font-size: 1.1em;
    color: #e44d26;
    font-weight: bold;
    margin: 10px 0;
}

.cart-form {
    margin-top: 15px;
}

.add-to-cart-btn {
    background-color: #2c3e50;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    width: 100%;
    font-size: 1em;
    transition: background-color 0.3s;
}

.add-to-cart-btn:hover {
    background-color: #34495e;
}
</style>