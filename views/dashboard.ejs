<%- include('header') %>

<div class="container mt-5">
    <h2>All Products</h2>
    <a class="btn btn-success mb-3" href="/clerk/products/add">+ Add Product</a>

    <div class="row">
        <% products.forEach(product => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text">$<%= product.price %></p>
                        <a href="/clerk/products/edit/<%= product.id %>" class="btn btn-warning">Edit</a>
                        <a href="/clerk/products/delete/<%= product.id %>" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('footer') %>
