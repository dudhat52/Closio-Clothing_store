    background: #0056b3;
    color: white;
}

@media (max-width: 768px) {
    .order-header {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }
    
    .order-footer {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }
    
    .order-item {
        flex-direction: column;
        text-align: center;
    }
    
    .order-item img {
        align-self: center;
    }
}
</style>
