<%- include('./partials/navbar') %>

<div class="order-history-container">
    <div class="order-history-header">
        <h1>Order History</h1>
        <p>View all your past orders</p>
    </div>

    <% if (orders && orders.length > 0) { %>
        <div class="orders-list">
            <% orders.forEach(order => { %>
                <div class="order-card">
                    <div class="order-header">
                        <div class="order-info">
                            <h3>Order #<%= order._id.toString().slice(-8) %></h3>
                            <p class="order-date">
                                Placed on <%= order.orderDate.toLocaleDateString('en-US', { 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric',
                                    hour: '2-digit',
                                    minute: '2-digit'
                                }) %>
                            </p>
                        </div>
                        <div class="order-status">
                            <span class="status-badge status-<%= order.orderStatus %>">
                                <%= order.orderStatus.charAt(0).toUpperCase() + order.orderStatus.slice(1) %>
                            </span>
                        </div>
                    </div>

                    <div class="order-items">
                        <% order.items.forEach(item => { %>
                            <div class="order-item">
                                <img src="<%= item.productImage %>" alt="<%= item.productTitle %>">
                                <div class="item-info">
                                    <h4><%= item.productTitle %></h4>
                                    <p>Quantity: <%= item.quantity %></p>
                                    <p class="item-price">$<%= (item.price * item.quantity).toFixed(2) %></p>
                                </div>
                            </div>
                        <% }) %>
                    </div>

                    <div class="order-footer">
                        <div class="order-total">
                            <strong>Total: $<%= order.orderTotal.toFixed(2) %></strong>
                        </div>
                        <div class="order-actions">
                            <a href="/orders/<%= order._id %>" class="btn-view-details">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="empty-orders">
            <div class="empty-icon">ðŸ“¦</div>
            <h2>No Orders Yet</h2>
            <p>You haven't placed any orders yet. Start shopping to see your order history here!</p>
            <a href="/" class="btn-shop-now">Start Shopping</a>
        </div>
    <% } %>
</div>

<style>
